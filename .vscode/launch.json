{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üè≠ Control Tablillas - Streamlit",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app_local.py",
            "console": "integratedTerminal",
            "args": ["run", "--server.port", "8501", "--server.address", "localhost"],
            "module": "streamlit",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "üè≠ Control Tablillas - Install",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/install_local.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}